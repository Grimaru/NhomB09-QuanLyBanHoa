@using demo2.Models;
@using PagedList.Mvc;
@model PagedList.IPagedList<Product>

@{
    ViewBag.Title = "SanPham";
    var format = System.Globalization.CultureInfo.GetCultureInfo("vi-VN");
}

<!DOCTYPE html>
<html>
<head>
    <title>Sản Phẩm</title>
    <link rel="stylesheet" href="~/Content/sanpham.css">
    <style>
        .product-grid {
            display: flex;
            flex-wrap: wrap;
            gap: 20px; /* Add space between products */
        }

        .product {
            flex: 1 1 calc(25% - 20px); /* Adjust the width of each product */
            box-sizing: border-box;
            border: 1px solid #ccc;
            padding: 10px;
            text-align: center;
        }

            .product img {
                max-width: 100%;
                height: 200px;
            }

        .pagination {
            display: flex;
            justify-content: center;
            margin-top: 20px;
        }

        .MenuPage li {
            display: inline;
            background-color: pink;
            justify-content: space-between;
            margin-bottom: 100px;
        }

        .pagination-controls {
            display: flex;
            justify-content: center;
            align-items: center;
            margin-top: 20px;
            margin-bottom: 20px;
        }

            .pagination-controls div {
                text-align: center;
                margin-bottom: 10px;
            }

            .pagination-controls .page-info {
                font-size: 1.2em;
                margin-right: 10px;
            }
    </style>
</head>
    <body>
        <div class="AnhHoang">
            <header>
                <div class="logo">
                    La vie rose
                    <div style="font-size: 16px; font-weight: normal; color: #777">FLOWER BOUTIQUE</div>
                </div>
                <nav>
                    <ul>
                        <li><a href="/Home/TrangChu">Trang chủ</a></li>
                        <li><a href="">Giới thiệu</a></li>
                        <li><a href="/Product/SanPham">Sản phẩm</a></li>
                        <li><a href="">Hoa sự kiện</a></li>
                        <li><a href="">Chuyện Hoa Lá</a></li>
                    </ul>
                </nav>
                <div class="icons">
                    <form action="@Url.Action("TimTheoTen", "Product")" method="get">
                        <input type="text" name="_name" />
                        <input type="submit" value="🔍" />
                    </form>
                <span class="icon"><a href="/User/DangNhap">👤</a></span>
                <span class="icon"><a href="/Shopping/ShowCart">🛒<span id="cart-count"></span>@Html.Action("BagCart", "Shopping")</a></span>
                </div>
            </header>
            <main>
                <div class="filter">
                    <select>
                        <option>Giá</option>
                    </select>
                    <select>
                        <option>Màu sản phẩm</option>
                    </select>
                    <select>
                        <option>Kích thước</option>
                    </select>
                </div>
                <form action="@Url.Action("TimTheoTen", "Product")" method="get">
                    <p>Tìm tên sản phẩm:</p>
                    <input type="text" name="_name" />
                    <input type="submit" value="search" />
                </form>
                <h2>Tất cả sản phẩm</h2>
                <div class="product-grid">
                    @foreach (var sp in Model)
                    {
                        <div class="product">
                            <img src="@Url.Content(sp.HinhanhSP)" alt="@sp.TenSP" />
                            <p>@Html.DisplayFor(model => sp.TenSP)</p>
                            <p>@String.Format(format, "{0:c0}", sp.GiaSP)</p>
                            <p style="color:pink">@Html.ActionLink("Chi tiết", "Details", new { id = sp.IDSP })</p>
                        </div>
                    }
                </div>
                <div class="pagination-controls">
                    Trang @(Model.PageCount < Model.PageNumber ? 0 : Model.PageNumber) / @Model.PageCount
                </div>
                <div class="MenuPage">
                    @Html.PagedListPager(Model, page => Url.Action("SanPham", new { page = page }))
                </div>
            </main>
            <footer>
                <div class="footer-section">
                    <h3>La vie rose</h3>
                    <p>1444/257 Trường Sa, Q.Tân Bình, TP.HCM</p>
                    <p>090 8855 914</p>
                    <p>TiệmhoamuaXuan@gmail.com</p>
                </div>
                <div class="footer-section">
                    <h3>Chăm sóc khách hàng</h3>
                    <p><a href="#">Chính sách mua hàng</a></p>
                    <p><a href="#">Hình thức thanh toán</a></p>
                    <p><a href="#">Liên hệ</a></p>
                </div>
                <div class="footer-section">
                    <h3>Đăng ký để nhận thông tin</h3>
                    <input type="email" placeholder="email">
                    <button>📧</button>
                    <script src="Tintuc.js"></script>
                </div>
            </footer>
        </div>
    </body>
</html>
