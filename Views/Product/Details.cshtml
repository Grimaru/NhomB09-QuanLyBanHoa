@model demo2.Models.Product

@{
    ViewBag.Title = "Details";
}

@{
    var format = System.Globalization.CultureInfo.GetCultureInfo("vi-VN");
}

<head>
    <title>La vie rose</title>
    <link rel="stylesheet" href="~/Content/sanpham.css">
</head>
<style>
    .search-form {
        display: flex;
        align-items: center;
    }

        .search-form input[type="text"] {
            flex-grow: 1;
            margin-right: 5px;
        }
    .product-detail {
        padding: 20px;
    }

    .product-main {
        display: flex;
        gap: 20px;
        margin-bottom: 40px;
    }

    .product-image {
        flex: 1;
        display: flex;
        flex-direction: column;
    }

        .product-image img {
            width: 100%;
            height: auto;
            border: 1px solid #ddd;
            margin-bottom: 10px;
        }

    .product-info {
        flex: 2;
    }

        .product-info h1 {
            margin-bottom: 10px;
        }

        .product-info .price {
            color: #e91e63;
            font-size: 24px;
            margin-bottom: 20px;
        }

    .add-to-cart {
        background-color: #e91e63;
        color: white;
        border: none;
        padding: 10px 20px;
        cursor: pointer;
        margin-bottom: 20px;
    }

    .description {
        margin-bottom: 20px;
    }
</style>
<body>
    <header>
        <div class="logo">
            <div>
                La vie rose
                <div style="font-size: 16px; font-weight: normal;color: #777">FLOWER BOUTIQUE</div>
            </div>
        </div>
        <nav>
            <ul>
                <li><a href="/Home/TrangChu">Trang chủ</a></li>
                <li><a href="">Giới thiệu</a></li>
                <li><a href="/Product/SanPham">Sản phẩm</a></li>
                <li><a href="">Hoa sự kiện</a></li>
                <li><a href="">Chuyện Hoa Lá</a></li>
            </ul>
        </nav>
        <div class="icons">
            <form action="@Url.Action("TimTheoTen", "Product")" method="get" class="search-form">
                <input type="text" name="_name" />
                <input type="submit" value="🔍" />
            </form>
            <span class="icon"><a href="/User/DangNhap">👤</a></span>
            <span class="icon"><a href="/Shopping/ShowCart">🛒<span id="cart-count"></span>@Html.Action("BagCart", "Shopping")</a></span>
        </div>
    </header>
    <main class="product-detail">
        <div class="product-main">
            <div class="product-image">
                <img src="@Url.Content(Model.HinhanhSP)"/>
            </div>
            <div class="product-info">
                <h1>@Html.DisplayFor(model => model.TenSP)</h1>
                <p class="price">@String.Format(format, "{0:c0}", Model.GiaSP)</p>
                <a href="/Shopping/AddToCart/@Model.IDSP"><button class="add-to-cart">Thêm vào giỏ</button></a>
                <p class="description">@Html.DisplayFor(model => model.MotaSP)</p>
            </div>
        </div>
    </main>
    <footer>
        <div class="footer-section">
            <h3>La vie rose</h3>
            <p>1444/257 Trường Sa, Q.Tân Bình, TP.HCM</p>
            <p>090 8855 914</p>
            <p>TiệmhoamuaXuan@gmail.com</p>
        </div>
        <div class="footer-section">
            <h3>Chăm sóc khách hàng</h3>
            <p><a href="#">Chính sách mua hàng</a></p>
            <p><a href="#">Hình thức thanh toán</a></p>
            <p><a href="#">Liên hệ</a></p>
        </div>
        <div class="footer-section">
            <h3>Đăng ký để nhận thông tin</h3>
            <input type="email" placeholder="email">
            <button>📧</button>
        </div>
    </footer>
    <script>
        const addToCartButton = document.querySelector('.add-to-cart');
        const cartCountElement = document.getElementById('cart-count');

        let cartCount = 0;

        addToCartButton.addEventListener('click', () => {
            cartCount++;
            cartCountElement.textContent = cartCount;
        });
    </script>
</body>
