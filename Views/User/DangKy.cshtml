@model demo2.Models.User

@{
    ViewBag.Title = "DangKy";
}

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>La vie rose - Flower Boutique</title>
    <link rel="stylesheet" href="~/Content/chitiet.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css">
</head>
<body>
    <header>
        <div class="logo">

            <div>
                La vie rose
                <div style="font-size: 16px; font-weight: normal;color: #777">FLOWER BOUTIQUE</div>
            </div>
        </div>
        <nav>
            <ul>
                <li><a href="/Home/TrangChu">Trang chủ</a></li>
                <li><a href="">Giới thiệu</a></li>
                <li><a href="/Product/SanPham">Sản phẩm</a></li>
                <li><a href="">Hoa sự kiện</a></li>
                <li><a href="">Chuyện Hoa Lá</a></li>
            </ul>
        </nav>
        <div class="icons">
            <span class="icon">🔍</span>
            <span class="icon"><a href="/User/DangNhap">👤</a></span>
            <span class="icon"><a href="/Shopping/ShowCart">🛒<span id="cart-count"></span></a></span>
        </div>
    </header>
    <main>
        <div class="banner">
            <img src="data:image/jpeg;base64," alt="Banner Image">
            <h3>ĐĂNG KÝ TÀI KHOẢN</h3>
            <p>Trang chủ / Đăng ký tài khoản</p>
        </div>
        <div class="form-container">
            <div class="tabs">
                <button>Đăng nhập</button>
                <button class="active">Đăng ký</button>
            </div>
            @using (Html.BeginForm("RegisterUser", "User", FormMethod.Post))
            {
                <div>
                    <form>
                        <div>
                            <input type="number" id="IDND" placeholder="Nhập ID">
                        </div>
                        <div>
                            <input type="text" id="TKND" placeholder="Nhập Họ Tên">
                        </div>
                        <div>
                            <input type="tel" id="SDTND" placeholder="Nhập Số Điện Thoại">
                        </div>
                        <div>
                            <input type="email" id="EmailND" placeholder="Nhập Email">
                        </div>                     
                        <div>
                            <input type="password" id="MatKhauND" placeholder="Nhập Mật Khẩu">
                        </div>
                        <button type="submit">TẠO TÀI KHOẢN</button>
                    </form>
                </div>
            }
        </div>
    </main>
    <footer>
        <div class="footer-section">
            <h3>La vie rose</h3>
            <p>1444/257 Trường Sa, Q.Tân Bình, TP.HCM</p>
            <p>090 8855 914</p>
            <p>TiệmhoamuaXuan@gmail.com</p>
        </div>
        <div class="footer-section">
            <h3>Chăm sóc khách hàng</h3>
            <p><a href="#">Chính sách mua hàng</a></p>
            <p><a href="#">Hình thức thanh toán</a></p>
            <p><a href="#">Liên hệ</a></p>
        </div>
        <div class="footer-section">
            <h3>Đăng ký để nhận thông tin</h3>
            <input type="email" placeholder="email">
            <button>📧</button>
        </div>
    </footer>
</body>
